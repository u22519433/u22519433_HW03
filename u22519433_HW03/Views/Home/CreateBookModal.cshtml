@using u22519433_HW03.Models
@model u22519433_HW03.Models.Book

<div class="modal fade" id="createBookModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            @using (Html.BeginForm("CreateBook", "Home", FormMethod.Post, new { @class = "book-form" }))
            {
                @Html.AntiForgeryToken()
                <div class="modal-header">
                    <h5 class="modal-title">Add New Book</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="form-group mb-3">
                        @Html.LabelFor(m => m.Name, new { @class = "form-label" })
                        @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group mb-3">
                        @Html.LabelFor(m => m.PageCount, new { @class = "form-label" })
                        @Html.TextBoxFor(m => m.PageCount, new { @class = "form-control", type = "number" })
                        @Html.ValidationMessageFor(m => m.PageCount, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group mb-3">
                        @Html.LabelFor(m => m.Point, new { @class = "form-label" })
                        @Html.TextBoxFor(m => m.Point, new { @class = "form-control", type = "number" })
                        @Html.ValidationMessageFor(m => m.Point, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group mb-3">
                        @Html.LabelFor(m => m.AuthorId, "Author", new { @class = "form-label" })
                        @Html.DropDownListFor(m => m.AuthorId,
                            (SelectList)ViewBag.AuthorId,
                            "Select Author", new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.AuthorId, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group mb-3">
                        @Html.LabelFor(m => m.TypeId, "Genre", new { @class = "form-label" })
                        @Html.DropDownListFor(m => m.TypeId,
                            (SelectList)ViewBag.TypeId,
                            "Select Genre", new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.TypeId, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Add Book</button>
                </div>
            }
        </div>
    </div>
</div>


